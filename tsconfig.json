{
  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "dist/types",
    "module": "esnext",
    "target": "es2020",
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "emitDeclarationOnly": false,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es2022", "dom"],
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "node_modules/**/*"],
}
